@model Car_Rental_booking.Model.FleetMaster

<div>

    <form asp-action="VehicleAdd" method="post" class="col-xl-4 " enctype="multipart/form-data">
        <input asp-for="@Model.Id" hidden/>
        @*<h1 class="text-primary">@(Model.Id != 0 ? "Üpdate" : "Add")Vehicle </h1>*@
        <div class="form-group col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12">
            @*<label asp-for="FleetName"></label>*@
            <input asp-for="FleetName" class="form-control" placeholder="Vehicle Name" />
        </div>
        <div class="form-group col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12">
            @*<label asp-for="FleetBrand"></label>*@
            <input asp-for="FleetBrand" class="form-control" placeholder="Vehicle Brand" />
        </div>
        <div class="form-group col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12">
            @*<label asp-for="Color"></label>*@
            <input asp-for="Color" class="form-control" placeholder="Vehicle Color" />

        </div>
        <div class="form-group col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12">
            @*<label asp-for="FleetNumber"></label>*@
            <input asp-for="FleetNumber" class="form-control" placeholder="Vehicle Number" />
        </div>
        <div class="form-group col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12">
            @*<label asp-for="FleetModel"></label>*@
            <input asp-for="FleetModel" class="form-control" placeholder="Vehicle Model" />
        </div>
        <div class="form-group col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12">

            @*<label asp-for="FleetCatgory"></label>*@
            <input asp-for="FleetCatgory" class="form-control mb-3 row-6" placeholder="Vehicle Catgory" />
        </div>
        <div class="form-group col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12">
            <label asp-for="FleetUrl">Vehicle Image</label>
            <input asp-for="FleetUrl" type="file" name="file" class="form-control" />
        </div>

        @*<button type="submit" class="btn btn-primary">@(Model.Id != 0 ? "Üpdate" : "Add")Vehicle</button>*@
    </form>
</div>
