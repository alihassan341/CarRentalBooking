@using Car_Rental_booking.Model;
@model IEnumerable<FleetMaster>

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #f1f1f1;
    }
    
    h1 {
        text-align: center;
        margin-top: 30px;
        margin-bottom: 30px;
    }

    .container {
        margin: 0 auto;
        max-width: 1200px;
        padding: 0 15px;
    }

    .table {
        width: 100%;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        border-collapse: collapse;
        margin-bottom: 30px;
    }

    .table th, .table td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .table th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    .table td img {
        width: 80PX;
        height: 40PX;
        
    }

    .table td.actions {
        text-align: center;
    }

    .btn {
        display: inline-block;
        background-color: #F77D0A;
        color: #fff;
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        margin-right: 10px;
        cursor: pointer;
    }

    .btn.edit {
        background-color: #F77D0A;
    }

    .btn.delete {
            background-color: #F77D0A;
    }

    .btn:hover {
        background-color: #3e8e41;
    }

   /* media only screen and (max-width: 768px) {
        .table {
            font-size: 14px;
        }

        .table th, .table td {
            padding: 8px 10px;
        }

        .btn {
            font-size: 14px;
            padding: 6px 12px;
            margin-right: 5px;
        }
    }*/
</style>

<div class="container">
    <h1>Vehicles List</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th>Fleet Number</th>
                <th>Fleet Name</th>
                <th>Fleet Brand</th>
                <th>Color</th>
                <th>Fleet Model</th>
                <th>Fleet Category</th>
                <th>Fleet Image</th>
                
                <th class="actions">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FleetNumber</td>
                    <td>@item.FleetName</td>
                    <td>@item.FleetBrand</td>
                    <td>@item.Color</td>
                    <td>@item.FleetModel</td>                   
                    <td>@item.FleetCatgory</td>
                    <td><img src="@item.FleetUrl" alt="Fleet Image"></td>
                    <td class="actions">
                        <a href="#" class="btn edit">Edit</a>
                        <a href="#" class="btn delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
